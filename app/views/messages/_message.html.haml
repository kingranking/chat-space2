.chat-main__messages__box{data: {message: {id: message.id}}}
  .chat-main__messages__box__info
    .chat-main__messages__box__info__name
      = message.user.name
    .chat-main__messages__box__info__date-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__messages__box__messaage
    - if message.content.present?
      %p.chat-main__messages__box__messaage__content
        = message.content
    = image_tag message.image.url, class: "chat-main__messages__box__messaage__image" if message.image.present?

      