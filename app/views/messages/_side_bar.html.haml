.side-bar
  .side-bar__header
    .side-bar__header__box
      %h3.side-bar__header__box__user-name
        = current_user.name
      %ul.side-bar__header__box__menu
        %li.side-bar__header__box__menu__new-group
          = link_to new_group_path do
            =icon("fas", "edit", class: "bnt")
        %li.side-bar__header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            =icon("fas", "cog", class: "bnt")
  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups__group
        = link_to group_messages_path(group) do
          .side-bar__groups__group__name
            = group.name
          .side-bar__groups__group__message
            = group.show_last_message
            